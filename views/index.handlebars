<div id ="headerSection">
  <h2>Eat-Da-Burger: Hamburger Emporium App</h2>
</div>

<div id="middleSection">

  <!-- Left  -->
  <div class="leftMiddle">
    <div class="uneaten center">

      {{#each burger}}
        {{#unless devoured}}
          <li>
           {{burger_name}}
            <button class="burgerBlock" data-id="{{id}}" data-eaten="{{devoured}}">
              {{#if devoured}}Eat Me!{{else}} Order Again!{{/if}}
            </button>
          </li>
        {{/unless}}
      {{/each}}

    </div>
  </div>

  <!-- Center -->
  <div class="centerMiddle">
    <div class="center">
      <input id="burgerName" type="text" placeholder="Your Burger: " data-eaten="0">
      <button id="addBurger" type="button">Add Your Burger to the Order Queue</button>
    </div>
  </div>

  <!-- Right -->
  <div class="rightMiddle">
    <div class="eaten center">
      {{#each burger}}
        {{#if devoured}}
          <li>
           {{burger_name}}
            <button class="burgerBlock" data-id="{{id}}" data-eaten="{{devoured}}">
              {{#if devoured}}Eat Me!{{else}} Order Again!{{/if}}
            </button>
          </li>
        {{/if}}
      {{/each}}
    </div>
  </div>

</div>
